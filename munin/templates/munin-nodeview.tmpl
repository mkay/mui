<TMPL_INCLUDE NAME="partial/head.tmpl">
    <body>
        <TMPL_INCLUDE NAME="partial/navigation.tmpl">
        <main class="container-fluid">
        	    <div class="row h-100">
        	        <aside class="d-none d-md-block col-md-5 col-lg-4 col-xl-3 bg-dark text-light">
        	            <TMPL_INCLUDE NAME="partial/sidebar.tmpl">
        	        </aside>
        	        <article class="col-md-7 col-lg-8 col-xl-9 col-content">
        	        
                    <TMPL_INCLUDE NAME="partial/heading_navigation.tmpl">
        	        
                    <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                        <TMPL_LOOP NAME="CATEGORIES">
                        <li class="nav-item">
                            <a class="nav-link<TMPL_IF NAME="__FIRST__"> active</TMPL_IF>" href="#<TMPL_VAR ESCAPE="HTML" NAME="NAME">" data-toggle="tab"><TMPL_VAR ESCAPE="HTML" NAME="NAME"></a>
                        </li>
                        </TMPL_LOOP>
                    </ul>
             
                    <div class="tab-content" id="tabContent">
                        <TMPL_LOOP NAME="CATEGORIES">
                            <div class="tab-pane fade <TMPL_IF NAME="__FIRST__">show active</TMPL_IF>" id="<TMPL_VAR ESCAPE="HTML" NAME="NAME">">
                            
                                <div class="row">
                                <TMPL_LOOP NAME="SERVICES">
                                    <div class="col-md-12 col-lg-6">
                                        <div class="card-body">
                                            <h5 class="card-title card-category"><TMPL_VAR ESCAPE="HTML" NAME="NAME"> / Day</h5>
                                        </div>
                                        <div class="card mb-4 shadow-sm">
                                            <a href="<TMPL_VAR NAME="URLX">">
                                                <img class="card-img-top<TMPL_IF NAME="STATE_WARNING"> warn</TMPL_IF><TMPL_IF NAME="STATE_CRITICAL"> crit</TMPL_IF>" alt="" src="<TMPL_VAR NAME="IMGDAY">" />
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-6">                     
                                        <div class="card-body">
                                            <h5 class="card-title card-category"><TMPL_VAR ESCAPE="HTML" NAME="NAME"> / Week</h5>
                                        </div>
                                        <div class="card card-img mb-4 shadow-sm">
                                            <a href="<TMPL_VAR NAME="URLX">">
                                                <img class="card-img-top <TMPL_IF NAME="STATE_WARNING"> warn</TMPL_IF><TMPL_IF NAME="STATE_CRITICAL"> crit</TMPL_IF>" alt="" src="<TMPL_VAR NAME="IMGWEEK">" />
                                            </a>
                                        </div>
                                    </div>                           
                                </TMPL_LOOP>
                                </div>
                            
                            </div>
                        </TMPL_LOOP>
                    </div>
	
        	        </article>
	        </div>
        </main>
        <TMPL_INCLUDE NAME="partial/footer.tmpl">
</body>
</html>
